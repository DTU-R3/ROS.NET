<UserControl x:Class="ROS_ImageWPF.ImageControl"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      Loaded="UserControl_Loaded" SnapsToDevicePixels="True" SizeChanged="UserControl_SizeChanged" >
  <Grid SnapsToDevicePixels="True">
    <Rectangle SnapsToDevicePixels="True" Stretch="Fill">
      <Rectangle.Fill>
        <ImageBrush x:Name="image" />
      </Rectangle.Fill>
    </Rectangle>
  </Grid>
</UserControl>