<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:ROS_ImageWPF;assembly=ROS_ImageUtils"
        AllowsTransparency="True" Background="Silver" Height="900" Icon="Icon.png" Left="0" Loaded="Window_Loaded" Name="Window1" Title="MainWindow" Top="0" Width="1600" WindowState="Normal" WindowStyle="None">
    <Grid>
        <TextBlock Height="20" HorizontalAlignment="Center" Margin="0,0,0,0" Name="LinkTextBlock" Text="Link Status Text Block"  TextAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Height="20" HorizontalAlignment="Center" Margin="0,20,0,0" Name="TimerStatusTextBlock" Text="Timer Status Text Block"  Foreground="Green" VerticalAlignment="Top"/>
        <TextBlock Height="20" HorizontalAlignment="Center" Margin="0,40,0,0" Name="TimerTextBlock" Text="Timer Text Block" VerticalAlignment="Top"/>

        <TabControl Height="518" HorizontalAlignment="Center" Margin="0,60,0,0" Name="MainCameraTabControl" VerticalAlignment="Top" Width="874" SelectionChanged="MainCameraTabControl_SelectionChanged">

            <TabControl.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Gold" Offset="1"/>
                </LinearGradientBrush>
            </TabControl.Background>

            <TabItem Background="Gold" Header="Main Camera 1" Name="MainCamera1">
                <!--Currently displaying 4:3 aspect ratio. Make Width 864 for 16:9 Widescreen-->
                <c:CompressedImageControl Background="Gold" c:CompressedImageControl.TopicName="image_raw1/compressed" Height="486" x:FieldModifier="public" x:Name="TestImage0" Width="648">

                    <c:CompressedImageControl.LayoutTransform>
                        <RotateTransform Angle="180"/>
                    </c:CompressedImageControl.LayoutTransform>
                </c:CompressedImageControl>
            </TabItem>
            
            <TabItem Background="Blue" Header="Main Camera 2" Name="MainCamera2">
            </TabItem>
            <TabItem Background="Red" Header="Main Camera 3" Name="MainCamera3">
            </TabItem>
            <TabItem Background="Green" Header="Main Camera 4" Name="MainCamera4">
            </TabItem>
        </TabControl>

        <TabControl HorizontalAlignment="Center" Height="284" Margin="0,580,0,0" Name="SubCameraTabControl" VerticalAlignment="Top" Width="458" SelectionChanged="SubCameraTabControl_SelectionChanged">
            
            <TabControl.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Gold" Offset="1"/>
                </LinearGradientBrush>
            </TabControl.Background>

            <TabItem Background="Gold" Header="Sub Camera 1" Name="SubCamera1">
                <!--Currently displaying 4:3 aspect ratio. Make Width 448 for 16:9 Widescreen-->
                <c:CompressedImageControl Background="Gold" c:CompressedImageControl.TopicName="image_raw2/compressed" Height="252" x:FieldModifier="public" x:Name="TestImage1" Width="336">
                    <c:CompressedImageControl.LayoutTransform>
                        <RotateTransform Angle="180"/>
                    </c:CompressedImageControl.LayoutTransform>
                </c:CompressedImageControl>
            </TabItem>
            <TabItem Background="Blue" Header="Sub Camera 2" Name="SubCamera2">
            </TabItem>
            <TabItem Background="Red" Header="Sub Camera 3" Name="SubCamera3">
            </TabItem>
            <TabItem Background="Green" Header="Sub Camera 4" Name="SubCamera4">
            </TabItem>
        </TabControl>

        <Image Height="240" HorizontalAlignment="Left" Margin="0,0,0,0" Name="XBOX360ControllerImage" Source="XBOX360Controller.png" VerticalAlignment="Bottom"/>

        <ProgressBar Height="100" HorizontalAlignment="Left" Margin="101,0,0,219" Maximum="1" Minimum="0" Name="LeftTriggerProgressBar" Orientation="Vertical" Width="50" VerticalAlignment="Bottom"/>
        <Rectangle Fill="White" Height="22" HorizontalAlignment="Left" Margin="269,0,0,219" Name="RightTrigger" VerticalAlignment="Bottom" Width="40" />
        <TextBlock HorizontalAlignment="Left" Margin="101,0,0,219" Name="LeftTriggerValueTextBlock" Text="0%" TextAlignment="Center" Width="50" VerticalAlignment="Bottom"/>
        
        <ProgressBar Height="100" HorizontalAlignment="Left" Margin="220,0,0,219" Maximum="1" Minimum="0" Name="RightTriggerProgressBar" Width="50" Orientation="Vertical" VerticalAlignment="Bottom"/>
        <Rectangle Fill ="White" Height="22" HorizontalAlignment="Left" Margin="61,0,0,219" Name="LeftTrigger" VerticalAlignment="Bottom" Width="40" />
        <TextBlock HorizontalAlignment="Left" Margin="220,0,0,219" Name="RightTriggerValueTextBlock" Text="0%" TextAlignment="Center" VerticalAlignment="Bottom" Width="50" />

        <Rectangle Fill="White" Height="38" HorizontalAlignment="Left" Margin="15,0,0,182" Name="LeftShoulder" Width="86" VerticalAlignment="Bottom"/>
        <Rectangle Fill="White" Height="38" HorizontalAlignment="Left" Margin="270,0,0,182" Name="RightShoulder" Width="86" VerticalAlignment="Bottom"/>

        <Ellipse Fill="White" Height="15" HorizontalAlignment="Left" Margin="135,0,0,117" Name="Back" Stroke="DarkGray" Width="20" VerticalAlignment="Bottom"/>
        <Ellipse Fill="White" Height="15" HorizontalAlignment="Left" Margin="219,0,0,117" Name="Start" Stroke="DarkGray" Width="20" VerticalAlignment="Bottom"/>

        <Ellipse Fill="Gray" Height="50" HorizontalAlignment="Left" Margin="32,0,0,91" Name="LeftStick"  Width="50" VerticalAlignment="Bottom"/>
        <Ellipse Fill="LightGray" Height="10" HorizontalAlignment="Left" Margin="52,0,0,111" Name="LeftStickValue" Width="10" VerticalAlignment="Bottom"/>
        <!--Y, X, B, A-->
        <Ellipse Fill="Gold" Height="30" HorizontalAlignment="Left" Margin="299,0,0,138" Name="Y" Stroke="Gold" Width="30" VerticalAlignment="Bottom"/>
        <Ellipse Fill="Blue" Height="30" HorizontalAlignment="Left" Margin="271,0,0,110" Name="X" Stroke="Blue" Width="30" VerticalAlignment="Bottom"/>
        <Ellipse Fill="Red" Height="30" HorizontalAlignment="Left" Margin="326,0,0,110" Name="B" Stroke="Red" Width="30" VerticalAlignment="Bottom"/>
        <Ellipse Fill="Green" Height="30" HorizontalAlignment="Left" Margin="299,0,0,83" Name="A" Stroke="Green" Width="30" VerticalAlignment="Bottom"/>
        <!--Right Stick-->
        <Ellipse Fill="Gray" Height="50" Margin="218,0,0,34" Name="RightStick"  Width="50" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Ellipse Height="10" Margin="238,0,0,53" Name="RightStickValue" Width="10" Fill="LightGray" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <!--DPad-->
        <Rectangle Fill="DarkGray" Height="20" Margin="115,0,0,69" Name="DPadUp"  Width="20" HorizontalAlignment="Left" Stroke="DarkGray" VerticalAlignment="Bottom"/>
        <Rectangle Fill="DarkGray" Height="20" Margin="115,0,0,29" Name="DPadDown"  Width="20" HorizontalAlignment="Left" Stroke="DarkGray" VerticalAlignment="Bottom"/>
        <Rectangle Fill="DarkGray" Height="20" Margin="95,0,0,49" Name="DPadLeft"  Width="20" HorizontalAlignment="Left" Stroke="DarkGray" VerticalAlignment="Bottom"/>
        <Rectangle Fill="DarkGray" Height="20" Margin="135,0,0,49" Name="DPadRight"  Width="20" HorizontalAlignment="Left" Stroke="DarkGray" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
