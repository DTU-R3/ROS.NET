<UserControl x:Class="EStopUC.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid>
        <Ellipse Name="EStopCircle" Height="100" HorizontalAlignment="Left" Fill="Green" Margin="24,38,0,0" Stroke="Black" VerticalAlignment="Top" Width="100" Mouse.MouseDown="EStopCircle_MouseDown"/>
        <TextBlock Name="EStopText" Height="33" HorizontalAlignment="Left" Margin="39,71,0,0"  Text="OFF" VerticalAlignment="Top" Width="71" TextAlignment="Center" FontSize="24" FontWeight="Bold" />
        <Label Content="  Emergency Stop" Height="25" HorizontalAlignment="Left" Margin="18,7,0,0" Name="label1" VerticalAlignment="Top" Width="111" FontWeight="Bold" FontSize="12" />
    </Grid>
</UserControl>
