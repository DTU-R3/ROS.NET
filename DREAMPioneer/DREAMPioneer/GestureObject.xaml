<s:SurfaceUserControl x:Class="DREAMPioneer.GestureObject"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008" Background="#01000000" IsHitTestVisible="True"
    >
    <s:SurfaceUserControl.RenderTransform>
        <ScaleTransform></ScaleTransform>
    </s:SurfaceUserControl.RenderTransform>
    <Grid>
        <Canvas Name="MainCanvas" Height="100" Width="100">
            <Image Name= "Applez" Source="PIONEER.png" Width="51" Height="51" Canvas.Top="25" Canvas.Left="25" Visibility="Visible"></Image>
            <Polygon Name="Arrow" Fill="Blue" IsHitTestVisible="False"></Polygon>
            <Ellipse Name="Border" Width="54" Height="54" Stroke="Blue" StrokeThickness="2" Opacity="0.8" Fill="Transparent" Canvas.Top="23" Canvas.Left="23" IsHitTestVisible="False" ></Ellipse>            
            <Ellipse Name="Dot" Width="50" Height="50" Fill="Transparent" Opacity=".4" IsHitTestVisible="False" Canvas.Top="25" Canvas.Left="25"></Ellipse>            
        </Canvas>
        <Canvas></Canvas>
    </Grid>
</s:SurfaceUserControl>
